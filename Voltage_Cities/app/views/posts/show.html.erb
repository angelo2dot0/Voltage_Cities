<div class="navbar-wrapper">
  <div class="container-fluid">
    <nav class="navbar navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <a class="navbar-brand" href="/cities">VOLTAGE CITIES</a>
        </div>

        <ul class="nav navbar-nav">
          <li class=" dropdown"><%= link_to 'PROFILE', user_path(@current_user) %>
          </li>
        </ul>

        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav pull-right">
            <% if @current_user %>
            <li class=""><%= link_to "LOGOUT", logout_path, method: :delete%></li>
          </ul>
          <%end%>
        </div>
      </div>
    </nav>
  </div>
</div>


<div class="post-bg">
  <div class="text-center" style="padding:100px 0">
    <div class="col-md-12 col-xs-12" align="center">
      <div class="center-block">
        <div class="color-box">
          <br>

          <h2> USERNAME: <%= @user.username %> </h2>
          <h3>  <%=@post.title%> </h3> 
          <h3><%=@post.content%> </h3>
          <h3>TAGS:   <%=raw tag_links@post.tag_list%> </h3>
          <br>

          <div>
            <%@post.comments.each do |comment| %>
            <h2>USERNAME:<%= comment.user.username%></h2>
            <h3><%= comment.content%></h3>
            <%end%>
          </div>
          <br>
          <br>
          <div
            class="fb-like"
            data-share="true"
            data-width="450"
            data-show-faces="true">
          </div>

        <%=link_to 'COMMENT', new_city_post_comment_path(@city, @post), class: "main-button" %>
        <main-button><% if @user.id == @current_user.id%>
        <%=link_to 'EDIT', edit_city_post_path(@city, @post), class: "main-button" %>
        <%=link_to'DELETE', delete_city_post_path(@city, @post), method: :delete, data:{confirm: "#{@user.username} are you sure you to delete this post?" },class: "main-button" %>
        <br>
        <br>
        <br>
        <br>
        <%end%>
      </main-button>

    </div>
  </div>
</div>
</div>
</nav>
</div>
</div>




