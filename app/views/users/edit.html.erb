<div class="navbar-wrapper">
  <div class="container-fluid">
    <nav class="navbar navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">VOLTAGE CITIES</a>
        </div>

        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class=" dropdown"><%= link_to 'PROFILE', user_path(@current_user) %>
            </li>
          </ul>
          <ul class="nav navbar-nav pull-right">
            <li class=""><a href="/login">LOG IN</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>

<div class="profileedit-bg">
    <div class="text-center" style="padding:90px 0">

    <%= form_for (@user), :html =>{ :multipart => true }, method: :patch do |f| %>
    <h1>EDIT PROFILE</h1> 

    <div class="editprofile-background" id="editprofile"></div>
    <div class="container">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="well">
          <% flash.each do |key, value| %>
                        <div class="alert alert-<%= key %>"><%= value %></div>
                        <% end %>
          <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2 class="error-warning">
              <%= pluralize(@user.errors.count, "errors") %> prohibited
              this owner from being saved:
            </h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
              <li class="error-message"><%= msg %></li>
              <% end %>
            </ul>
          </div>
          <% end %>

          <%= f.text_field :artist_name, class: "form-control"%>

          <%= f.text_field :current_city, class: "form-control"%>

          <%= f.password_field :oldpassword, class: "form-control", placeholder: "Old Password" %>

          <%= f.password_field :password, class: "form-control", placeholder: "New Password" %>

          <%= f.file_field :avatar%>

          <%= f.submit "SAVE!", class: "login-button" %>
        </div>
      </div>
    </div>
    <% end %> 
  </div>
</div>





